[include]
		path = .private/git/config

[branch]
		autosetuprebase = always

[pull]
		rebase = true

[format]
		signoff = true

[grep]
		linenumber = true

[push]
		default = simple

[color]
		ui = auto

[color "branch"]
		current = yellow reverse
		local = yellow
		remote = green

[color "diff"]
		meta = blue bold
		frag = magenta bold # line info
		old = red # deletions
		new = green # additions

[color "status"]
		added = yellow
		changed = green
		untracked = cyan

[merge]
		ff = false
		tool = vimdiff
		log = true

[help]
		autocorrect = 1

[alias]
    d = diff --patience
    br = branch
    ci = commit -a
    co = checkout
    st = status

    up = pull
    upstream = remote add upstream
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lgo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[core]
    # Use custom `.gitignore` and `.gitattributes`
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

  	# Treat spaces before tabs and all kinds of trailing whitespace as an error
  	# [default] trailing-space: looks for spaces at the end of a line
  	# [default] space-before-tab: looks for spaces before tabs at the beginning of a line
  	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

  	# Make `git rebase` safer on OS X
  	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
  	trustctime = false

    # Set editor to VIM
    editor = vim
    pager = lv -c

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[url "ssh://git@github.com/"]
    insteadOf = gh:
    insteadOf = ghub:
    insteadOf = github:
    insteadOf = http://github.com/

[url "https://github.com/"]
		insteadOf = http://github.com/

[url "ssh://git@github.com/mikemackintosh"]
		insteadOf = http://github.com/mikemackintosh
		insteadOf = https://github.com/mikemackintosh
